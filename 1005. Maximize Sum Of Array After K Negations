class Solution {
public:
    int largestSumAfterKNegations(vector<int>& nums, int k) {
         
        int count=0,i, n=nums.size();
        sort(nums.begin(), nums.end());
        
        for(i=0; i<min(n,k); i++){
            
            if(nums[i] >= 0)
                break;
            else{
               nums[i] = - nums[i];  
            }                
        }
        
        sort(nums.begin(), nums.end());
        if(i<k) {
            if((k-i)%2) {
                nums[0]=-nums[0];
            }
        }
        
        return accumulate(nums.begin(), nums.end(), 0);
        
    }
};
