class Solution {
public:
    int wateringPlants(vector<int>& plants, int capacity) {
        int ct=0;
        int x = capacity;
        for(int i=0;i<plants.size();i++){
            x = x - plants[i];
            
            if(x<0){
             x=capacity-plants[i];
                
            ct+= (i+1+i);
            }
            else{
               ct++; 
            } 
        }
       return ct;
    }
};
