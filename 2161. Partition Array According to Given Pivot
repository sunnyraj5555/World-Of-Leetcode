class Solution {
public:
    vector<int> pivotArray(vector<int>& nums, int pivot) {
        
        vector<int> small, equal, large, res;
        
        for(int i=0; i<nums.size(); i++){
            
            if(nums[i]<pivot) small.push_back(nums[i]);
            else if(nums[i]>pivot) large.push_back(nums[i]);
            else equal.push_back(nums[i]);
            
        }
        
        for(int i=0; i<small.size(); i++) 
            res.push_back(small[i]);
        
        for(int i=0; i<equal.size(); i++) 
            res.push_back(equal[i]);
        
        for(int i=0; i<large.size(); i++) 
            res.push_back(large[i]);
        
        return res;
    }
};
